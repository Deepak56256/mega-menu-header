  <nav class="mobile-menu-drawer fifth-menu">
    <!-- Root Menu -->
    <ul class="menu-level menu-root active" data-level="0">
      <li class="menu-header">{{ fifth_menu.title }}</li>
      {% for link in fifth_menu.links %}
        <li class="menu-item">
          {% if link.links.size > 0 %}
            <button class="submenu-open" data-target="fifth-submenu-0-{{ forloop.index0 }}">
              <span>{{ link.title }}</span><img class="arrow" src="https://cdn.shopify.com/s/files/1/1735/6525/files/arrow-right-bold-svgrepo-com_1.svg?v=1747463617">
            </button>
          {% else %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>

    <!-- Level 1 Submenus -->
    {% for link in fifth_menu.links %}
      {% if link.links.size > 0 %}
        <ul class="menu-level submenu" id="fifth-submenu-0-{{ forloop.index0 }}" data-parent="root">
          <li class="menu-header">
            <button class="submenu-back"><img class="arrow" src="https://cdn.shopify.com/s/files/1/1735/6525/files/arrow-right-bold-svgrepo-com_2.svg?v=1747464028"> <p>{{ link.title }}</p></button> 
          </li>
          {% for child in link.links %}
            <li class="menu-item">
              {% if child.links.size > 0 %}
                <button class="submenu-open" data-target="fifth-submenu-1-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}">
                  <span>{{ child.title }}</span><img class="arrow" src="https://cdn.shopify.com/s/files/1/1735/6525/files/arrow-right-bold-svgrepo-com_1.svg?v=1747463617">
                </button>
              {% else %}
                <a href="{{ child.url }}">{{ child.title }}</a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>

        <!-- Level 2 Grandchild Menus -->
        {% for child in link.links %}
          {% if child.links.size > 0 %}
            <ul class="menu-level submenu" id="fifth-submenu-1-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}" data-parent="fifth-submenu-0-{{ forloop.parentloop.index0 }}">
              <li class="menu-header">
                <button class="submenu-back"><img class="arrow" src="https://cdn.shopify.com/s/files/1/1735/6525/files/arrow-right-bold-svgrepo-com_2.svg?v=1747464028"> <p>{{ child.title }}</p></button>
              </li>
              {% for grandchild in child.links %}
                <li class="menu-item">
                  <a href="{{ grandchild.url }}">{{ grandchild.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  </nav>
