}
.accordion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 1rem;
  font-weight: bold;
  padding: 10px;
  background: none;
  border: none;
  cursor: pointer;
  width: 100%;
}

.accordion-icon {
  font-size: 1.2rem;
  transition: transform 0.3s ease;
}

.accordion-content {
  display: none;
  padding: 10px 0;
}
.accordion-item.active .accordion-content {
  display: block;
}
